{
  "name": "pomodorino",
  "productName": "Pomodorino",
  "version": "0.2.1",
  "description": "",
  "main": "main.js",
  "scripts": {
    "build": "tsc",
    "prestart": "yarn run build",
    "start": "electron ./dist/main.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "release": "build"
  },
  "author": "Rafael Merlin",
  "license": "MIT",
  "devDependencies": {
    "@types/howler": "^2.1.0",
    "@types/node-notifier": "^5.4.0",
    "electron": "^5.0.1",
    "electron-builder": "^20.39.0",
    "typescript": "^3.5.1"
  },
  "dependencies": {
    "howler": "^2.1.2",
    "jimp": "^0.6.4",
    "node-notifier": "^5.4.0",
    "timrjs": "^1.0.1"
  },
  "build": {
    "appId": "Pomodorino",
    "mac": {
      "category": "Time.Management",
      "target": [
        {
          "target": "dmg"
        },
        {
          "target": "tar.gz"
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage"
        },
        {
          "target": "tar.gz"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "portable"
        },
        {
          "target": "zip"
        }
      ]
    }
  },
  "postinstall": "electron-builder install-app-deps"
}
